<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- RelativeLayout start-->
    <style name="BaseRelativeLayout">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="BaseRelativeLayout.DigitalClickItem">
        <item name="android:background">@drawable/dic_bg_selector</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <!-- RelativeLayout end-->

    <!--  ImageView start -->
    <style name="BaseImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="BaseImageView.Left">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="BaseImageView.Right">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:src">@drawable/icon_right_gray</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!--  ImageView end -->

    <!-- TextView start-->
    <style name="BaseTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="BaseTextView.DigitalClickItem">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="BaseTextView.DigitalClickItem.Left">
        <item name="android:textColor">@color/comm_text_color</item>
    </style>
    <style name="BaseTextView.DigitalClickItem.Right">
        <item name="android:layout_marginLeft">@dimen/comm_margin</item>
        <item name="android:textColor">@color/comm_tis_text_color</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!-- TextView end-->

    <!-- View start-->
    <style name="dci_middle_line_v_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/comm_line_color</item>
        <item name="android:layout_marginLeft">55dp</item>
        <item name="android:visibility">gone</item>
    </style>
    <!-- View end-->

    <style name="DotProgressStyle">
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="dot_color">@color/colorPrimary</item>
    </style>

    <!--MarqueeText -->
    <style name="MarqueeTextStyle">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:freezesText">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="FlexTextItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/gray</item>
    </style>

</resources>
